{% extends 'base.html.twig' %}

{% block title %}Modifier mon garage{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">
                        <i class="fas fa-warehouse"></i> Modifier mon garage
                    </h1>

                    {{ form_start(garageForm) }}
                        <div class="mb-3">
                            {{ form_label(garageForm.Nom) }}
                            {{ form_widget(garageForm.Nom) }}
                            {{ form_errors(garageForm.Nom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(garageForm.Lieu) }}
                            {{ form_widget(garageForm.Lieu) }}
                            {{ form_errors(garageForm.Lieu) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(garageForm.CodePostal) }}
                            {{ form_widget(garageForm.CodePostal) }}
                            {{ form_errors(garageForm.CodePostal) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_mon_garage') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(garageForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}