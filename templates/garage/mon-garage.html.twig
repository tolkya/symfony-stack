{% extends 'base.html.twig' %}

{% block title %}Mon Garage{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-warehouse"></i> {{ garage.nom }}</h1>
                <div>
                    <a href="{{ path('app_garage_edit') }}" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Modifier mon garage
                    </a>
                    <a href="{{ path('app_moto_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Ajouter une moto
                    </a>
                </div>
            </div>

            <!-- Informations du garage -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informations du garage</h5>
                    <p class="card-text">
                        <i class="fas fa-map-marker-alt"></i> {{ garage.lieu }}<br>
                        <i class="fas fa-mail-bulk"></i> {{ garage.codePostal }}
                    </p>
                </div>
            </div>

            <!-- Liste des motos -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-motorcycle"></i> Mes motos 
                        <span class="badge bg-primary">{{ motos|length }}</span>
                    </h5>
                </div>
                <div class="card-body">
                    {% if motos|length > 0 %}
                        <div class="row">
                            {% for moto in motos %}
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        {% if moto.image %}
                                            <img src="{{ asset('uploads/' ~ moto.image) }}" 
                                                 class="card-img-top" alt="{{ moto.marque }} {{ moto.modele }}"
                                                 style="height: 200px; object-fit: cover;">
                                        {% else %}
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                                 style="height: 200px;">
                                                <i class="fas fa-motorcycle fa-3x text-muted"></i>
                                            </div>
                                        {% endif %}
                                        <div class="card-body d-flex flex-column">
                                            <h6 class="card-title">{{ moto.marque }} {{ moto.modele }}</h6>
                                            <p class="card-text flex-grow-1">
                                                <small class="text-muted">
                                                    {{ moto.annee }} • {{ moto.cylindree }}cc • {{ moto.chevaux }}ch
                                                </small>
                                            </p>
                                            <div class="mt-auto">
                                                <a href="{{ path('app_moto_show', {id: moto.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary">Voir</a>
                                                <a href="{{ path('app_moto_edit', {id: moto.id}) }}" 
                                                   class="btn btn-sm btn-outline-secondary">Modifier</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-motorcycle fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune moto dans votre garage</h5>
                            <p class="text-muted">Commencez par ajouter votre première moto !</p>
                            <a href="{{ path('app_moto_new') }}" class="btn btn-success">
                                <i class="fas fa-plus"></i> Ajouter ma première moto
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Statistiques -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-primary">{{ motos|length }}</h3>
                            <small class="text-muted">Motos</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success">
                                {% set totalCylindree = 0 %}
                                {% for moto in motos %}
                                    {% set totalCylindree = totalCylindree + moto.cylindree %}
                                {% endfor %}
                                {{ totalCylindree }}
                            </h3>
                            <small class="text-muted">cc total</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}